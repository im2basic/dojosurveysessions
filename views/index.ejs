<body>
    <h1>Survey Form </h1>
    <form action='/process' method='POST' id='surveyfrom'>
        <div class="form-group">
            <label for="exampleFormControlInput1">Name</label>
            <input type="text" name='name' class="form-control" id="exampleFormControlInput1"
                placeholder="ex. Sky Marie">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Location</label>
            <input type="text" name='location' class="form-control" id="exampleFormControlInput1"
                placeholder="ex. Chicago">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Favorite Language</label>
            <input type="text" name='language' class="form-control" id="exampleFormControlInput1"
                placeholder="ex. python">
        </div>
        </div><br>
        <div class="form-group">
            <label for="exampleFormControlTextarea1" name='comment'>Comment (optional): </label>
            <textarea class="form-control" id="exampleFormControlTextarea1" name="comment" rows="3"
                form="dojoform"></textarea>
            <input type='submit' value='Submit'>
        </div>
    </form>
</body>

</html>